{
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "search.exclude": {
      "**/dist/**": true
  },
  "typescript.format.enable": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "tslint.jsEnable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true
  },
  "files.associations": {
    ".diezrc": "json"
  }
}
